/* Custom Scrollbar */
::-webkit-scrollbar {
    width: 8px;
    height: 8px;
}

::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.1);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* Floating Elements */
.floating {
    position: absolute;
    z-index: 1;
    pointer-events: none;
}

.floating-1 {
    width: 300px;
    height: 300px;
    background: radial-gradient(rgba(99, 102, 241, 0.2), transparent 70%);
    top: -100px;
    right: -100px;
}

.floating-2 {
    width: 200px;
    height: 200px;
    background: radial-gradient(rgba(139, 92, 246, 0.2), transparent 70%);
    bottom: -50px;
    left: -50px;
}

/* Animations */
@keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
}

.stat-card {
    animation: float 6s ease-in-out infinite;
}

