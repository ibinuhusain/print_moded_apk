/* Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

.sidebar-logo {
    display: flex;
    align-items: center;
    gap: 12px;
}

.sidebar-logo img {
    height: 80px;
    width: auto;
    object-fit: contain;
}

.sidebar-logo-text {
    font-size: 18px;
    font-weight: 700;
    color: white;
    background: none;
    -webkit-background-clip: unset;
    -webkit-text-fill-color: white;
    letter-spacing: -0.5px;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
    background: var(--primary-bg);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
    overflow-x: hidden;
}

/* Common Components */
.container {
    display: flex;
    min-height: 100vh;
    position: relative;
}

/* Sidebar */
.sidebar {
    width: 280px;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    background: var(--sidebar-bg);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    z-index: 100;
    transition: transform 0.3s ease;
    overflow-y: auto;
}

.sidebar-header {
    padding: 24px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.sidebar-logo {
    display: flex;
    align-items: center;
    gap: 12px;
}

.sidebar-logo-icon {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--accent-color), #8b5cf6);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24px;
}

.sidebar-logo-text {
    font-size: 20px;
    font-weight: 700;
    background: linear-gradient(90deg, #ffffff, #d1d5db);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    letter-spacing: -0.5px;
}

/* Navigation */
.sidebar-nav {
    padding: 15px;
}

.nav-item {
    display: flex;
    align-items: center;
    padding: 12px 15px;
    margin-bottom: 5px;
    border-radius: 8px;
    color: var(--text-secondary);
    text-decoration: none;
    transition: var(--transition);
}

.nav-item:hover, .nav-item.active {
    background: rgba(255, 255, 255, 0.05);
    color: var(--text-primary);
}

.nav-item.active {
    background: rgba(99, 102, 241, 0.1);
    color: var(--accent-color);
}

.nav-item .material-symbols-outlined {
    margin-right: 12px;
    font-size: 24px;
}

/* Main Content */
.main-content {
    flex: 1;
    margin-left: 280px;
    width: calc(100% - 280px) !important;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    transition: margin-left 0.3s ease;
}

.content {
    flex: 1;
    padding: 24px;
    background: var(--background-color);
}

/* Top Header */
.top-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24px;
    height: 70px;
    background: var(--card-bg);
    box-shadow: var(--elevation-1);
    position: sticky;
    top: 0;
    z-index: 99;
}

.header-left, .header-right {
    display: flex;
    align-items: center;
    gap: 15px;
}

.header-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
}

/* Buttons */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    border-radius: 12px;
    font-weight: 600;
    font-size: 15px;
    border: none;
    cursor: pointer;
    transition: var(--transition);
    text-decoration: none;
    gap: 8px;
    background: var(--accent-color);
    color: white;
    box-shadow: var(--elevation-1);
}

.btn:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: var(--elevation-2);
}

.btn-success {
    background: linear-gradient(135deg, var(--success), #059669);
    color: white;
    box-shadow: 0 4px 6px rgba(16, 185, 129, 0.2);
}

.btn-success:hover {
    background: linear-gradient(135deg, #0da271, #048157);
    transform: translateY(-2px);
    box-shadow: 0 6px 8px rgba(16, 185, 129, 0.3);
}

/* Cards */
.card, .section {
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: 16px;
    padding: 24px;
    margin-bottom: 24px;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    box-shadow: var(--elevation-1);
    transition: var(--transition);
}

.card:hover, .section:hover {
    transform: translateY(-2px);
    box-shadow: var(--elevation-2);
}

/* Form Elements */
.form-group {
    margin-bottom: 24px;
}

.form-group label {
    display: block;
    margin-bottom: 8px;
    font-weight: 500;
    color: var(--text-primary);
    font-size: 15px;
}

input[type="text"],
input[type="number"],
input[type="email"],
input[type="password"],
textarea,
select {
    width: 100%;
    padding: 12px 16px;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    color: var(--text-primary);
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    transition: var(--transition);
}

input[type="text"]:focus,
input[type="number"]:focus,
input[type="email"]:focus,
input[type="password"]:focus,
textarea:focus,
select:focus {
    outline: none;
    border-color: var(--accent-color);
    box-shadow: 0 0 0 2px rgba(99, 102, 241, 0.2);
}

/* Add this to your existing CSS */
.table-responsive {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    border-radius: 16px;
    margin-bottom: 24px;
    position: relative;
}

.table-responsive table {
    width: 100%;
    min-width: 800px; /* Ensures the table has a minimum width */
    border-collapse: separate;
    border-spacing: 0;
}

/* Optional: Add a subtle shadow to indicate scrollability */
.table-responsive::-webkit-scrollbar {
    height: 8px;
}

.table-responsive::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 4px;
    margin: 4px;
}

.table-responsive::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
}

/* For webkit browsers */
::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* Standard syntax */
scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
}

/* Optional: Add a gradient fade effect on the right side */
.table-responsive {
    mask-image: linear-gradient(to right, black 95%, transparent 100%);
    -webkit-mask-image: linear-gradient(to right, black 95%, transparent 100%);
}

/* For WebKit browsers */
@media screen and (-webkit-min-device-pixel-ratio: 0) {
    .table-responsive {
        padding-bottom: 8px; /* Space for scrollbar */
    }
}

/* Status Indicators */
.status-completed {
    color: var(--success);
    font-weight: 500;
}

.status-pending {
    color: var(--warning);
    font-weight: 500;
}

.status-approved {
    color: var(--success);
    font-weight: 500;
}

.status-rejected {
    color: var(--danger);
    font-weight: 500;
}

/* Alerts */
.alert {
    padding: 16px;
    border-radius: 12px;
    margin-bottom: 24px;
    font-size: 14px;
    display: flex;
    align-items: center;
    gap: 12px;
}

.alert-success {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success);
    border: 1px solid rgba(16, 185, 129, 0.2);
}

.alert-danger {
    background: rgba(239, 68, 68, 0.1);
    color: var(--danger);
    border: 1px solid rgba(239, 68, 68, 0.2);
}

.alert .material-symbols-outlined {
    font-size: 20px;
}

/* Dashboard Stats */
.dashboard-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: 32px;
}

.stat-card {
    padding: 24px;
    border-radius: 20px;
    transition: var(--transition);
    position: relative;
    overflow: hidden;
    box-shadow: var(--elevation-1);
    border: 1px solid rgba(255, 255, 255, 0.05);
    background: var(--card-bg);
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--elevation-2);
}

.stat-card h3 {
    font-size: 36px;
    font-weight: 700;
    margin-bottom: 8px;
    color: var(--text-primary);
}

.stat-card p {
    color: var(--text-secondary);
    font-size: 15px;
    font-weight: 500;
}

/* Image Previews */
.image-preview {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 16px;
    margin-top: 16px;
}

.image-preview img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    border-radius: 8px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: var(--transition);
}

.image-preview img:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

/* File Upload */
.file-upload-wrapper {
    margin-bottom: 24px;
}

.file-upload {
    border: 2px dashed rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 32px;
    text-align: center;
    transition: var(--transition);
    background: rgba(0, 0, 0, 0.2);
    cursor: pointer;
}

.file-upload:hover {
    border-color: var(--accent-color);
    background: rgba(99, 102, 241, 0.1);
}

.file-upload-icon {
    font-size: 48px;
    color: var(--accent-color);
    margin-bottom: 16px;
}

.file-upload-text {
    color: var(--text-secondary);
    margin-bottom: 16px;
}

