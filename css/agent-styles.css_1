/* agent-styles.css */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200');

:root {
    /* Color Scheme */
    --primary-bg: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
    --sidebar-bg: rgba(23, 25, 49, 0.95);
    --background-color: #0f0f1a;
    --card-bg: rgba(255, 255, 255, 0.08);
    --card-border: rgba(255, 255, 255, 0.1);
    --text-primary: #ffffff;
    --text-secondary: rgba(255, 255, 255, 0.7);
    --accent-color: #6366f1;
    --accent-hover: #4f46e5;
    --success: #10b981;
    --warning: #f59e0b;
    --danger: #ef4444;
    --elevation-1: 0 4px 6px rgba(0, 0, 0, 0.1);
    --elevation-2: 0 10px 15px rgba(0, 0, 0, 0.2);
    --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
    overflow-x: hidden;
    position: relative;
    transition: margin-left 0.3s ease;
}

/* When mobile menu is open, prevent body scroll */
body.menu-open {
    overflow: hidden;
    height: 100vh;
}

/* Ensure proper positioning for sidebar */
.sidebar {
    transition: transform 0.3s ease;
}

/* Make sure main content is properly positioned */
.main-content {
    position: relative;
    transition: margin-left 0.3s ease;
}


